// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}

model User {
    id          Int     @id @default(autoincrement())
    uuid        String  @unique
    bio         String  @default("")
    firstName   String  @default("")
    lastName    String  @default("")
    userName    String  @unique
    pfpURL      String  @default("https://picsum.photos/500/500")
    location    String  @default("")
    coverURL    String  @default("https://picsum.photos/600/600")
    flavors     FlavorsOnUsers[]
    createdAt   DateTime @default(now())

    followers       Follower[]  @relation("Follower")
    myFollowerObj   Follower?   @relation ("MyUser")
    following       Following[] @relation("Following")
    myFollowingObj  Following?  @relation("MyUser")
}

model Flavor {
    id          Int         @id @default(autoincrement())
    name        String      @unique @default("")
    description String      @default("")
    color       String      @default("#fc571a")

    users       FlavorsOnUsers[]
}

model FlavorsOnUsers {
    id          Int         @id @default(autoincrement())
    flavor      Flavor      @relation(fields: [flavorId], references: [id])
    flavorId    Int
    user        User        @relation(fields: [userId], references: [id])
    userId      Int           
}
model Follower {
    id               Int        @id @default(autoincrement())
    followedUser     User       @relation("Follower", fields: [followedUserId], references: [id])
    followedUserId   Int     
    myUser           User       @relation("MyUser", fields: [myUserId], references: [id])
    myUserId         Int        @unique
}

model Following {
    id               Int         @id @default(autoincrement())
    userFollowing    User        @relation("Following", fields: [userFollowingId], references: [id])
    userFollowingId  Int   
    myUser           User       @relation("MyUser", fields: [myUserId], references: [id])
    myUserId         Int        @unique     
}